# Максимально простой и жесткий пранк
Add-Type @"
using System;
using System.Runtime.InteropServices;
public class Prank {
    [DllImport("user32.dll")]
    public static extern IntPtr GetDC(IntPtr hwnd);
    [DllImport("user32.dll")]
    public static extern int ReleaseDC(IntPtr hwnd, IntPtr hdc);
    [DllImport("gdi32.dll")]
    public static extern bool PatBlt(IntPtr hdc, int x, int y, int w, int h, uint rop);
    [DllImport("user32.dll")]
    public static extern bool SetCursorPos(int X, int Y);
    [DllImport("user32.dll")]
    public static extern void mouse_event(uint dwFlags, uint dx, uint dy, uint dwData, int dwExtraInfo);
}
"@

# 60 секунд пиздеца
for ($i = 0; $i -lt 120; $i++) {
    # Ломаем экран
    $hdc = [Prank]::GetDC([IntPtr]::Zero)
    [Prank]::PatBlt($hdc, 0, 0, 10000, 10000, 0x005A0049)
    [Prank]::ReleaseDC([IntPtr]::Zero, $hdc)
    
    # Ломаем мышку
    [Prank]::mouse_event(1, (Get-Random -200..200), (Get-Random -200..200), 0, 0)
    
    # Ждем
    Start-Sleep -Milliseconds 500
}

# Возвращаем нормально (просто перезагрузка экрана)
[System.Windows.Forms.SendKeys]::SendWait("{F5}")   
